<div id="deposit-now">
  <%= link_to "Sign up", new_registration_path(resource_name), :class => 'green-button', :id => 'deposit-now-button' %>
  <p>
    Don't have an account?  Sign up now. &rarr;
  </p>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<fieldset>
  <legend>Sign in</legend>
  <div><p><%= f.label :email %></p>
  <p><%= f.email_field :email %></p></div>

  <div><p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p></div>

  <p><small><%= link_to "Forgot your password?", new_password_path(resource_name) %></small></p>

  <div><%= f.submit "Sign in" %> <%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
</fieldset>
<% end %>
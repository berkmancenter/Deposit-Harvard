<div id="deposit-now">
<%= link_to "Deposit now!", new_deposit_path %>  
</div>

<h2>Your Activity</h2>
<div>
  <% @deposits.each do |deposit| %>
    <div class='deposit'>
      <h3><%= deposit.title %></h3>
      <p>Deposited to: <%= deposit.repositories || "none" %></p>
      <p><small>Deposited on: <%= deposit.created_at.strftime("%b %d, %Y") %></small></p>
    </div>
  <% end %>
</div>
